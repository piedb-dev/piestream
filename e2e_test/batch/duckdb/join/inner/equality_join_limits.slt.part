# description: Test equality joins on numeric limits

statement ok
SET RW_IMPLICIT_FLUSH TO true;

# SMALLINT limits
statement ok
CREATE TABLE t(t_k0 SMALLINT);

statement ok
INSERT INTO t VALUES (-32768), (32767);

statement ok
CREATE TABLE u(u_k0 SMALLINT);

statement ok
INSERT INTO u VALUES (-32768), (32767);

query II
SELECT t_k0, u_k0 FROM   t, u   WHERE t_k0 = u_k0 order by t_k0;
----
-32768	 -32768
32767	32767

statement ok
DROP TABLE t;

statement ok
DROP TABLE u;

